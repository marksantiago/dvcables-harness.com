{

    // Enforcing options
    // http://www.jshint.com/docs/options/#enforcing-options

    "bitwise" : true,
    "curly" : true,
    "eqeqeq" : true,
    "forin" : true,
    "freeze" : true,
    "noarg" : true,
    "noempty" : true,
    "nonbsp" : true,
    "undef" : true,
    "unused" : true,
    "strict" : true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Relaxing options
    // http://www.jshint.com/docs/options/#relaxing-options

    "esversion" : 3,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Environments
    // http://www.jshint.com/docs/options/#environments
		
    "browser" : true,
    "devel" : true,
    "jquery" : true,
    "mocha" : true,
    "node" : true

}
